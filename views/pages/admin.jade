extends ../layout

block content
	.container
		.row
			form.form-horizontal(method="post",action="/admin/moive/new")
				
				.form-group
					label.col-sm-3.control-label(for="inputTitle") 电影名字
					.col-sm-10
						input#inputTitle.form-control(type="text",name="moive[title]",value="#{moive.title}")
				
				.form-group
					label.col-sm-2.control-label(for="inputDoctor") 电影导演
					.col-sm-10
						input#inputDoctor.form-control(type="text",name="moive[doctor]",value="#{moive.doctor}")

				.form-group
					label.col-sm-2.control-label(for="inputCountry") 国家
						.col-sm-10
							input#inputCountry.form-control(type="text",name="moive[country]",value="#{moive.country}")

				.form-group
					label.col-sm-2.control-label(for="inputLanguage") 语种
						.col-sm-10
							input#inputLanguage.form-control(type="text",name="moive[language]",value="#{moive.language}")

				.form-group
					label.col-sm-2.control-label(for="inputPoster") 海报地址
						.col-sm-10
							input#inputPoster.form-control(type="text",name="moive[poster]",value="#{moive.poster}")

				.form-group
					label.col-sm-2.control-label(for="inputFlash") 片源地址
						.col-sm-10
							input#inputFlash.form-control(type="text",name="moive[flash]",value="#{moive.flash}")

				.form-group
					label.col-sm-2.control-label(for="inputYear") 上映年代
						.col-sm-10
							input#inputYear.form-control(type="text",name="moive[year]",value="#{moive.year}")

				.form-group
					label.col-sm-2.control-label(for="inputSummary") 电影简介
						.col-sm-10
							input#inputSummary.form-control(type="text",name="moive[summary]",value="#{moive.summary}")

				.form-group
					.col-sm-offset-2.col-sm-10
					button.btn.btn-default(type="submit") 录入